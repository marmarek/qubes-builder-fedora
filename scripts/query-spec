#!/bin/bash

if [ $# -lt 2 ]; then
    echo "Usage: $0 file.spec field" >&2
    exit 1
fi

if [ -r "${1}.in" ]; then
    rpm -q $RPM_QUERY_DEFINES --qf "$2" --specfile <(`dirname $0`/generate-spec "${1}.in" /dev/stdout) 2>/dev/null
else
    rpm -q $RPM_QUERY_DEFINES --qf "$2" --specfile "$1" 2>/dev/null
fi
